<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iviFoto"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" 
        android:background="#f00"/>

    <TextView
        style="@style/TextFormat"
        android:id="@+id/tviNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iviFoto"
        android:layout_below="@+id/iviFoto"
        android:text="Nombre"
         />

    <Button
        android:id="@+id/butRegresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Regresar" />

    <TextView
        android:id="@+id/tviLugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tviProfesion"
        android:layout_centerHorizontal="true"
        android:text="Lugar" />

    <TextView
        android:id="@+id/tviProfesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="ProfesiÃ³n"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tviFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tviLugar"
        android:layout_centerHorizontal="true"
        android:text="Fecha de nacimiento" />

    <Button
        android:id="@+id/butCompartir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Compartir" />

</RelativeLayout>